    <template title="bdpaygateonepay_onepay_complete" version_id="1" version_string="0.9-dev"><![CDATA[<xen:title>{xen:phrase bdpaygateonepay_pay_with_onepay}</xen:title>

<form class="xenForm formOverlay">

	<xen:if is="{$paymentAccepted}">
		<p>{xen:phrase bdpaygateonepay_thank_you_payment_accepted}</p>

		<xen:if is="{$returnUrl}">
			<dl class="ctrlUnit submitUnit">
				<dt></dt>
				<dd>
					<a href="{xen:raw $returnUrl}" class="button">{xen:phrase continue}</a>
				</dd>
			</dl>
		</xen:if>
	<xen:elseif is="{$message}" />
		<p>{xen:phrase bdpaygateonepay_payment_rejected_message_x, 'message={$message}'}</p>
	<xen:else />
		<p>{xen:phrase bdpaygateonepay_payment_rejected_no_message}</p>
	</xen:if>

</form>]]></template>
    <template title="bdpaygateonepay_onepay_index" version_id="1" version_string="0.9-dev"><![CDATA[<xen:title>{xen:phrase bdpaygateonepay_pay_with_onepay}</xen:title>

